<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.nitikaaggarwal.studentrecord.ShowRecordActivity">
<!-- TODO: Update blank fragment layout -->
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Show Record"
    android:textSize="30sp"
    android:layout_marginTop="20dp"
    android:textColor="#000000"
    android:gravity="center"/>
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter Phone No here"
    android:layout_marginTop="20dp"
    android:inputType="number"
    android:id="@+id/show_record_phone_ev"
    android:textSize="20sp"
    android:maxLength="10"
    android:layout_gravity="center_horizontal"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show Name"
    android:id="@+id/show_button"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name :"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/show_tv" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff0091ea"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:id="@+id/show_name_tv" />
</LinearLayout>
</LinearLayout>
