<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nitikaaggarwal.studentrecord.ShowRecordFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Record"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:gravity="center"/>
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="Enter Phone No here"
    android:layout_marginTop="20dp"
    android:id="@+id/show_record_phone_ev"
    android:textSize="20dp"
    android:maxLength="10"
    android:layout_gravity="center_horizontal"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Name"
        android:id="@+id/show_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="TestView to show number"
    android:textSize="30dp"
    android:layout_marginTop="20dp"
    android:id="@+id/show_name_tv"
    />
</LinearLayout>
